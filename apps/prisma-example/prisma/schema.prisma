generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    String @id @default(uuid()) @db.Uuid
  name  String
  email String @unique

  posts  Post[]
  groups Group[]
}

model Post {
  id       String @id @default(uuid()) @db.Uuid
  title    String
  author   User   @relation(fields: [authorId], references: [id])
  authorId String @map("author_id") @db.Uuid
}

model Group {
  id    String @id @default(uuid()) @db.Uuid
  name  String
  users User[]
}
